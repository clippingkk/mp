.clipping-page
  display flex
  flex-direction column
  min-height 100vh
  overflow hidden
  max-width 100vw
  background-size cover
  background-repeat no-repeat
  background-position center

.clipping-bg
  background-color rgba(0,0,0,.6)
  backdrop-filter blur(12px)
  display flex
  flex-direction column
  min-height 100vh
  max-width 100vw

.clipping-body
  display flex
  flex 1
  justify-content center
  align-items center
  flex-direction column

.clipping-card
  margin 0 20px
  padding 20px
  background-color rgba(255, 255, 255, .5)
  border-radius 8px
  display flex
  flex-direction column
  .title
    font-weight 900
    font-size 36px
  .content
    margin 20px 0
    font-size 24px
    font-weight 300
  .author
    align-self flex-end
    font-size 20px
    font-weight 300

.btn-primary
  margin 20px auto 0 auto
  border none
  background-color #3498db
  font-size 28px
  font-weight 300
  padding 10px 80px
  &::after
    content ''
    border none

.out-canvas
  position absolute
  top -99999px
  left -99999px
  visibility hidden
