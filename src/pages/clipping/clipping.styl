.clipping-page
  display flex
  flex-direction column
  min-height 100vh
  overflow hidden
  max-width 100vw
  background-size cover
  background-repeat no-repeat
  background-position center
  .share-canvas
    position fixed
    top 999999px
    left 999999px

.clipping-bg
  background-color rgba(0,0,0,.85)
  backdrop-filter blur(40px)
  display flex
  flex-direction column
  min-height 100vh
  max-width 100vw
  .title
    color #fff

.clipping-body
  display flex
  flex 1
  padding 20px
  flex-direction column
  .title
    color #ffffff
    font-weight 900
    font-size 36px
  .content
    color #ffffff
    margin 100px 0
    font-size 36px
    line-height 2
    font-weight 300
  .author
    color #ffffff
    align-self flex-end
    font-size 20px
    font-weight 300

.btn-primary
  // margin 80px auto 0 auto
  border none
  background-color #3498db
  font-size 28px
  font-weight 300
  padding 10px 80px
  color #fff
  position fixed
  right 20px
  bottom 100px
  &::after
    content ''
    border none

