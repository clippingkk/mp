.clipping-page
  display flex
  flex-direction column
  min-height 100vh
  overflow hidden
  max-width 100vw
  background-size cover
  background-repeat no-repeat
  background-position center
  .share-canvas
    position fixed
    top 999999px
    left 999999px

.clipping-bg
  background-color rgba(0,0,0,.85)
  backdrop-filter blur(40rpx)
  display flex
  flex-direction column
  min-height 100vh
  max-width 100vw
  .title
    color #fff

.clipping-body
  display flex
  flex 1
  padding 20rpx
  flex-direction column
  .title
    color #ffffff
    font-weight 900
    font-size 36rpx
  .content
    color #ffffff
    margin 100px 0
    // letter-spacing 2rpx
    font-size 32rpx
    line-height 2
    font-weight 200
  .author
    color #ffffff
    align-self flex-end
    font-size 20rpx
    font-weight 300
  .clipping-ext
    display flex
    flex-direction column
    .createdAt, .pageAt
      margin-bottom .3rem
      color #ffffff
      align-self flex-start
      font-size 20rpx
      font-weight 300


.btn-primary
  // margin 80px auto 0 auto
  border none
  background-color #3498db
  font-size 28rpx
  font-weight 300
  padding 10rpx 80rpx
  color #fff
  position fixed
  right 20rpx
  bottom 100rpx
  &::after
    content ''
    border none

